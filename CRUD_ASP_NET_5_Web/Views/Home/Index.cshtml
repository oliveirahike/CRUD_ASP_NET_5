@model CRUD_ASP_NET_5_Web.Models.UsersViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="text-center font-weight-bold">User Registration</h1>
    <form asp-action="Save" asp-controller="Home" method="post">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-xl-4">
                <label>Nome</label>
                <input asp-for="@Model.User.Nome" class="form-control" required/>
            </div>
            <div class="col-xl-4">
                <label>Email</label>
                <input asp-for="@Model.User.Email" class="form-control" required/>
            </div>
            <div class="col-xl-4">
                <label>CPF</label>
                <input asp-for="@Model.User.CPF" class="form-control" required/>
            </div>
        </div>
        <div class="row d-flex justify-content-end">
            <div class="col-xl-2">
                <label>&nbsp;</label>
                <button class="form-control btn btn-info">Save</button>
            </div>
        </div>
    </form>
    <table class="table table-striped table-sm mt-5">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">CPF</th>
                <th scope="col" class="text-center">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <th><label asp-for="@item.Nome">@item.Nome</label></th>
                    <th><label asp-for="@item.Email">@item.Email</label></th>
                    <th><label asp-for="@item.CPF">@item.CPF</label></th>
                    <th class="text-center"><label asp-for="@item.CPF">@item.CPF</label></th>
                </tr>
            }
        </tbody>
    </table>
</div>